<div class="container mx-auto my-12">
  <div class="flex flex-col md:flex-row items-center justify-between">
    <h1 class="text-3xl font-bold mb-4">Lista de tareas</h1>
    <div class="mb-4 md:mb-0">
      <input type="text" class="border border-gray-300 rounded-md py-2 px-4" placeholder="Buscar Equipo...">
      <button class="bg-blue-500 hover:bg-blue-600 text-white rounded-md py-2 px-4 ml-4">Buscar</button>
    </div>
  </div>
  <div class="overflow-x-auto">
    <table class="table-auto w-full">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">Título</th>
          <th class="px-4 py-2 text-left">Descripción</th>
          <th class="px-4 py-2 text-left">Archivo</th>
          <th class="px-4 py-2 text-left">Acciones</th>
        </tr>
      </thead>
      <tbody>
       
        <tr>
          <td class="border px-4 py-2"></td>
          <td class="border px-4 py-2"></td>
          <td class="border px-4 py-2"><a href="<%= tarea.archivo %>" target="_blank"></a></td>
          <td class="border px-4 py-2">
            <a href="/tareas/edit/<%= tarea._id %>" class="text-blue-500 hover:text-blue-600">Editar</a>
            <form action="/tareas/delete/<%= tarea._id %>" method="POST" class="inline-block">
              <button type="submit" class="text-red-500 hover:text-red-600 ml-4">Eliminar</button>
            </form>
          </td>
        </tr>
        
      </tbody>
    </table>
  </div>
  <div class="mt-8">
    <a href="/tareas/create" class="bg-blue-500 hover:bg-blue-600 text-white rounded-md py-2 px-4">Agregar tarea</a>
  </div>
</div>
